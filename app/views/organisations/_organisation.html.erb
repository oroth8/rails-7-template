<div id="<%= dom_id organisation %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= organisation.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Capacity:</strong>
    <%= organisation.capacity %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= organisation&.user_ids%>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this organisation", organisation, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this organisation', edit_organisation_path(organisation), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
